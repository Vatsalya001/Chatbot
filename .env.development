# ==============================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ==============================================
# This file contains safe defaults for development

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=development
PORT=3001
API_PREFIX=api

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/comment_app
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=comment_app

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ==============================================
# JWT AUTHENTICATION (Development Only)
# ==============================================
JWT_SECRET=development-jwt-secret-not-for-production
JWT_REFRESH_SECRET=development-refresh-secret-not-for-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ==============================================
# RATE LIMITING & THROTTLING
# ==============================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ==============================================
# CACHING CONFIGURATION
# ==============================================
CACHE_TTL=300
CACHE_MAX=100

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGIN=http://localhost:3000

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
NEXT_PUBLIC_API_URL=http://localhost:3001