# ==============================================
# COMMENT APP - ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and update the values for your environment

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=production
PORT=3001
API_PREFIX=api

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/comment_app_production
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password
DB_NAME=comment_app_production

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ==============================================
# JWT AUTHENTICATION
# ==============================================
# Generate secure random strings for production
# You can use: openssl rand -base64 64
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_64_characters_long
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_here_minimum_64_characters_long
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ==============================================
# RATE LIMITING & THROTTLING
# ==============================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ==============================================
# CACHING CONFIGURATION
# ==============================================
CACHE_TTL=300
CACHE_MAX=100

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Comma-separated list of allowed origins
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# ==============================================
# NETLIFY DEPLOYMENT (Optional)
# ==============================================
# Set these for Netlify deployment
NETLIFY=true
SUPABASE_DB_URL=postgresql://postgres:password@db.xxx.supabase.co:5432/postgres
UPSTASH_REDIS_URL=redis://default:password@region.upstash.io:port

# ==============================================
# PRODUCTION SECURITY (Optional)
# ==============================================
# SSL/TLS Configuration for production databases
DATABASE_SSL=true
REDIS_TLS=false

# ==============================================
# MONITORING & LOGGING (Optional)
# ==============================================
LOG_LEVEL=error
ENABLE_REQUEST_LOGGING=false